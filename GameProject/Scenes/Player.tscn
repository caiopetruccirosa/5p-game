script/source = "extends KinematicBody2D
class_name Player

var direction = Vector2()
var speed = 0
var is_animated = false 
var items = []

const TOP = Vector2(0, -1)
const DOWN = Vector2(0, 1)
const RIGHT = Vector2(1, 0)
const LEFT = Vector2(-1, 0)

const MAX_SPEED = 400

func _ready():
	set_physics_process(true)
	print(items)
	
func _physics_process(delta):
	var is_moving = true
	if Input.is_action_pressed(\"ui_up\"):
		if is_animated == false or direction != TOP:
			$AnimationPlayer.play(\"BottomToTop\")
			is_animated = true
		direction = TOP
	elif Input.is_action_pressed(\"ui_down\"):
		if is_animated == false or direction != DOWN:
			$AnimationPlayer.play(\"TopToBottom\")
			is_animated = true
		direction = DOWN
	elif Input.is_action_pressed(\"ui_right\"):
		if is_animated == false or direction != RIGHT:
			$AnimationPlayer.play(\"LeftToRight\")
			is_animated = true
		direction = RIGHT
	elif Input.is_action_pressed(\"ui_left\"):
		if is_animated == false or direction != LEFT:
			$AnimationPlayer.play(\"RightToLeft\")
			is_animated = true
		direction = LEFT
	else:
		is_moving = false
		is_animated = false
		$AnimationPlayer.stop()
		
		if direction == TOP:
			$Sprite.frame = 12
		elif direction == DOWN:
			$Sprite.frame = 18
		elif direction == RIGHT:
			$Sprite.frame = 0
		elif direction == LEFT:
			$Sprite.frame = 6
		
	if is_moving:
		speed = MAX_SPEED
	else:
		speed = 0
		
	var velocity = speed * direction * delta
	move_and_collide(velocity)"

